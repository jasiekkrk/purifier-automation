{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["es5", "es2017", "es6", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}